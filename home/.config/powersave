echo 'auto' > '/sys/bus/pci/devices/0000:01:00.0/power/control'
su - snelis -c "DISPLAY=:0.0 feh --bg-scale ~/Pictures/wallpapers/current.png"

if ! ps aux | grep -v grep | grep volume=nvidia_driver; then

  systemctl stop nvidia-docker.service
  lsmod | grep nvidia_uvm && rmmod nvidia_uvm
  lsmod | grep nvidia && rmmod nvidia
  echo OFF > /proc/acpi/bbswitch

else

  echo 'keep nvidia running'

fi;
