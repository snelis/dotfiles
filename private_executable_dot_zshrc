bumpminor () {
    git fetch
    echo 'latest version:'
    git tag -l -n | sort -V | tail -n 1
    tag=$(git tag -l | sort -V | tail -n1 | awk -F. '{$NF = $NF + 1;} 1' | sed 's/ /./g')
    git tag -a -m 'Maintenance update' $tag origin/master
    echo 'new version:'
    git tag -l -n | sort -V | tail -n 1
}

pyclean () {
    find . -regex '^.*\(__pycache__\|\.py[co]\)$' -delete
}

